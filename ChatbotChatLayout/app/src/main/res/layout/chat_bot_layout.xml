<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutChatBot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/padding_default"
    android:gravity="bottom">

    <ImageView
        android:id="@+id/imgBot"
        android:layout_width="@dimen/chat_image_size"
        android:layout_height="@dimen/chat_image_size"
        android:src="@drawable/ic_bot"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginRight="@dimen/margin_default" />
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/card_corner"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/colorChatBotBackground"
        >

        <TextView
            android:id="@+id/txtChatBot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:text="@string/bot_hello"
            android:maxWidth="@dimen/chat_text_max_width"
            android:padding="@dimen/padding_default"
            android:textColor="@color/colorChatBotText"
            />
    </android.support.v7.widget.CardView>
</LinearLayout>